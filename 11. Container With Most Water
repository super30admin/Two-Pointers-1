class Solution {
    public int maxArea(int[] height) 
    {
        int max = 0;
        int left = 0;
        int n = height.length;
        int right = n-1;
        
        while(left < right)
        {
            max = Math.max(max, Math.min(height[left] , height[right]) * (right - left));
            if(height[left] <= height[right])
            {
                left++;
            }
            else
            {
                right--;
            }
        }
        return max;
    }
}

//Time : O(N)
