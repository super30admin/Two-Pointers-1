    void sortColors(vector<int>& nums) {
    
        int mid = 0;
        int low = 0;
        int temp;
        int high = nums.size()-1;
        while(mid <= high){
            if(nums[mid]==2){
                temp = nums[mid];
                nums[mid] = nums[high];
                nums[high] = temp;
                high--;
            }
            else if(nums[mid]==0){
                temp = nums[low];
                nums[low] = nums[mid];
                nums[mid] = temp;
                mid++;
                low++;
            }
            else{
                mid++;
            }
            }
    
        
    }
};
